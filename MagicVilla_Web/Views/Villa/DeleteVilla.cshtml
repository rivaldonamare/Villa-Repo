@model MagicVilla_Web.Models.DTO.VillaDTO
<form asp-action="DeleteVilla">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />
        <input hidden asp-for="Id" />
        <div class="row">

            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Name" disable class="from-control" />
            </div>

            <div class="col-2">
                <label asp-for="Rate" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Rate" disable class="from-control" />
            </div>

            <div class="col-2">
                <label asp-for="Details" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <textarea asp-for="Details" disable class="from-control" rows="5"> </textarea>
            </div>

            <div class="col-2">
                <label asp-for="ImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="ImageUrl" disable class="from-control" />
            </div>

            <div class="col-2">
                <label asp-for="Occupancy" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Occupancy" disable class="from-control" />
            </div>

            <div class="col-2">
                <label asp-for="Sqft" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <input asp-for="Sqft" disable class="from-control" />
            </div>

            <div class="col-2">
                <label asp-for="Amenity" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10">
                <textarea asp-for="Amenity" disable class="from-control" rows="5"> </textarea>
            </div>

            <div class="col-5 offset-2 pb-3">
                <a asp-action="IndexVilla" asp-controller="Villa" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5 offset-2">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>



        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}